import pygame as pg

class Factory:
    def __init__(self, pos, resource_type, production_rate, interval):
        self.pos = pos
        self.resource_type = resource_type
        self.production_rate = production_rate
        self.interval = interval
        self.timer = 0

    def update(self, delta_time, player_resources):
        self.timer += delta_time
        if self.timer >= self.interval:
            player_resources[self.resource_type] += self.production_rate
            self.timer = 0

    def draw(self, screen):
        pg.draw.rect(screen, (100, 100, 255), (*self.pos, 40, 40))
